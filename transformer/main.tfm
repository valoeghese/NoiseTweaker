in x
in y

out r
out g
out b

start
# scale noise
div x 100.0
div y 100.0

# octaves
set octaves 10

# vars
set sea_level 0.4
set beach_level sea_level
add beach_level 0.05

# generate opensimplex noise
prepare x
prepare y
prepare octaves
gennoise_s noise

# default land colours
set r 0.0
set g 0.8
set b 0.0

# set beach vs land
prepare noise
prepare beach_level

loadif_l sand

# set land vs water
prepare noise
prepare sea_level

loadif_l water